<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="#E2FFFFFF"
    android:elevation="5dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/roundedcard2"
        android:orientation="vertical"

        android:padding="1dp">

        <TextView
            android:id="@+id/notifCompName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:scrollbars="vertical"
            android:text="Accenture Pvt Ltd"
            android:layout_marginTop="8dp"
            android:textColor="@color/dark_red"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notificPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="start"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:scrollbars="vertical"
            android:text="@string/your_hint"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notifDeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="#083E3939"
                    android:foregroundGravity="center"
                    android:gravity="center_horizontal"
                    android:paddingRight="15dp"
                    android:text="NEW"
                    android:textColor="@color/dark_red"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/jobview"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/btn_background"
                    android:text="    VIEW    "
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF"
    android:elevation="5dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/roundedcard2"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/jobCompName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Accenture Pvt Ltd"
            android:textColor="@color/dark_red"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/jobicPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:autoLink="web"
                android:lineSpacingExtra="4dp"
                android:text="@string/your_hint"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </ScrollView>

        <TextView
            android:id="@+id/jobDeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:background="#083E3939"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Deadline - 26 July"
            android:textColor="@color/dark_red"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/dark_red" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
